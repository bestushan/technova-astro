---
const currentYear = new Date().getFullYear();
const footerLinks = [
  { header: "Company", links: ["About", "Careers", "Blog"] },
  { header: "Services", links: ["Web Design", "SEO", "Maintenance"] },
  { header: "Connect", links: ["Twitter", "LinkedIn", "GitHub"] },
];
---

<footer
  class="bg-linear-to-t from-emerald-950 via-emerald-900 to-emerald-800 border-t border-gray-100 pt-16 pb-8"
>
  <div class="max-w-7xl mx-auto px-4 reveal">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
      <!-- Brand Section -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="text-xl font-bold text-yellow-300"
          >TechNova Solutions</a
        >
        <p class="mt-4 text-yellow-300 leading-relaxed">
          Crafting high-performance digital experiences with precision and
          modern code.
        </p>
      </div>

      <!-- Links Sections -->
      {
        footerLinks.map((group) => (
          <div>
            <h4 class="font-bold text-yellow-300 mb-4 pl-16">{group.header}</h4>
            <ul class="space-y-2 pl-16">
              {group.links.map((link) => (
                <li>
                  <a
                    href="#"
                    class="text-yellow-300 hover:text-yellow-300 transition-colors duration-200"
                  >
                    {link}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <!-- Bottom Bar -->
    <div
      class="pt-8 border-t border-gray-50 flex flex-col md:flex-row justify-between items-center gap-4"
    >
      <p class="text-sm text-gray-300">
        &copy; {currentYear} YourAgency Name. All rights reserved.
      </p>
      <div class="flex space-x-6">
        <a href="#" class="text-xs text-yellow-300 hover:text-yellow-600"
          >Privacy Policy</a
        >
        <a href="#" class="text-xs text-yellow-300 hover:text-yellow-600"
          >Terms of Service</a
        >
      </div>
    </div>
  </div>
</footer>
